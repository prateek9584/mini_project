<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.prateek.fragment.Frag2">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
</LinearLayout>
    <EditText
        android:id="@+id/editText"
      style="@style/editText_style"
        android:drawableLeft="@drawable/user_ic"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="40dp"
        android:layout_height="match_parent"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:hint="Username" />

    <EditText
        style="@style/editText_style"
        android:id="@+id/editText2"
        android:drawableLeft="@drawable/email_ic"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Enter your E-mail"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/editText_style"
        android:layout_weight="1"
        android:drawableLeft="@drawable/phone_ic"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:hint="Enter your number"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editText3"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:drawableLeft="@drawable/password_ic"
        android:hint="Enter your Password"
        style="@style/editText_style"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editText4"
        android:drawableRight="@drawable/show_password_ic"
        android:paddingLeft="60dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:hint="Confirm your Password"
        style="@style/editText_style"
        android:ems="10"
        android:inputType="textPassword" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center">
    <Button
        android:id="@+id/button"
        style="@style/buton_background"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="Register" />
</LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
