<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="editText_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:layout_margin">7dp</item>
</style>
        <style name="buttonbackground_style">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FDFDFE</item>
            <item name="android:layout_marginTop">20dp</item>
            <item name="android:layout_marginBottom">20dp</item>

    </style>
        <style name="Textedit_background_style">
        <item name="android:gravity">center</item>

        <item name="android:textAllCaps">true</item>

        <item name="android:textColor">#FDFDFE</item>
     <item name="android:ems">10</item>
     <item name="android:layout_margin">20dp</item>
 </style>
    <style name="textViewback_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">7dp</item>
    </style>
    <style name="buton_background">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/buton_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_margin">18dp</item>
    </style>
</resources>

